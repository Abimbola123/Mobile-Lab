<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ata6f.mobile3lab.MainActivity">

    <?xml version="1.0" encoding="utf-8"?>
    <manifest xmlns:android="http://schemas.android.com/apk/res/android"
        package="com.example.ata6fd.mobile3lab">

        <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
        <uses-permission android:name="android.permission.RECORD_AUDIO" />

        <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
            <activity
                android:name=".MainActivity"
                android:label="@string/app_name"
                android:theme="@style/AppTheme.NoActionBar">
                <intent-filter>
                    <action android:name="android.intent.action.MAIN" />

                    <category android:name="android.intent.category.LAUNCHER" />
                </intent-filter>
            </activity>
            <activity android:name=".About"
                android:label="About"
                android:theme="@style/AppTheme.NoActionBar">

            </activity>
            <activity android:name=".Recorder"
                android:label="Recorder"
                android:theme="@style/AppTheme.NoActionBar">

            </activity>
            <activity android:name=".TexttoSpeech"
                android:label="Text To Speech"
                android:windowSoftInputMode="adjustPan"
                android:theme="@style/AppTheme.NoActionBar">

            </activity>
            <activity android:name=".SpeechToSpeech"
                android:label="Speech To Speech"
                android:theme="@style/AppTheme.NoActionBar">

            </activity>
            <activity android:name=".SpeechtoText"
                android:label="Speech To Text"
                android:theme="@style/AppTheme.NoActionBar">

            </activity>
            <activity android:name=".Help"
                android:label="Help"
                android:theme="@style/AppTheme.NoActionBar">

            </activity>
        </application>

    </manifest>


</android.support.constraint.ConstraintLayout>
